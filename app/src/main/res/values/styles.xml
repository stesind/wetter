<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <!--<item name="android:shadowColor">@color/primary_dark</item>-->
        <!--<item name="android:windowBackground">@color/window_background</item>-->
        <!--<item name="android:navigationBarColor">@color/navigation_bar_color</item>-->
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <!--<item name="actionOverflowButtonStyle">set Icon</item>-->
        <!--<item name="drawerArrowStyle">@color/icons</item>-->
    </style>



    <!--Tab Layout Styles-->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/icons</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/icons</item>
    </style>



</resources>